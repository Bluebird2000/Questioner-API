{
  "name": "questioner-api",
  "version": "1.0.0",
  "description": "Server side application that provides questioner UI client with data",
  "main": "server.js",
  "scripts": {
    "build": "babel api -d dist",
    "start": "npm run build && node ./dist/server",
    "lintfix": "eslint . --fix",
    "dev": "nodemon --exec babel-node api/server.js",
    "pretest": "eslint .",
    "test": "babel-node node_modules/mocha/bin/_mocha test/*.js",
    "coverage": "babel-node ./node_modules/babel-istanbul/lib/cli cover --hook-run-in-context node_modules/mocha/bin/_mocha -- -R spec --timeout 10000 test/*.js",
    "coveralls": "npm run coverage -- --report lcovonly && cat ./coverage/lcov.info | coveralls"
  },
  "engines": {
    "node": "8.11.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bluebird2000/questioner-api.git"
  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "author": "Ahmad Lateef",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bluebird2000/questioner-api/issues"
  },
  "homepage": "https://github.com/Bluebird2000/Questioner-api#readme",
  "dependencies": {
    "babel-istanbul": "^0.12.2",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "eslint-config-airbnb": "^17.1.0",
    "express": "^4.16.4",
    "joi": "^13.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coveralls": "^3.0.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.2"
  }
}
